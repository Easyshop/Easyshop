<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="EasyShop">
<body>
<div metal:define-macro="portlet">

    <dl class="portlet" 
        id="portlet-easyshop-searchbox">

        <dt class="portletHeader">
            <img src="hook.gif"
                 tal:attributes="src string:$portal_url/hook.gif" />

           <span class="title"
                 i18n:translate="search_label">
               Search
           </span>                                 
                        
        </dt>

        <dd align="center"
            class="portletItem">            

            <form name="searchform"
                  action="search">
                  
                <table width="100%">
                    <tr>
                        <td>
                            <input id="searchGadget"
                                   tabindex=""
                                   name="SearchableText"
                                   type="text"
                                   size="15"
                                   value=""
                                   title="Search Site"
                                   accesskey="4"
                                   i18n:attributes="title title_search_site;"
                                   tal:attributes="value request/SearchableText|nothing;
                                                   tabindex tabindex/next"
                                   class="visibility:visible" />
                        
                        </td>
                        <td width="1%">
                            <input src="hook.gif"
                                   type="image"
                                   value="Search"
                                   tal:attributes="src string:$portal_url/hook.gif"
                                   i18n:attributes="value search_label;" />                                                  
                        </td>
                    </tr>

                </table>
            </form>
        </dd>

    </dl>

</div>
</body>
</html>
