<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="EasyShop">
    <body>
        <div metal:define-macro="portlet"            
             tal:define="view context/@@portletEasyShopAdministrationView;                
                         shop_url view/getShopURL"
             tal:condition="view/showPortlet">

            <dl class="portlet" 
                id="portlet-easyshop-administration">

                <dt class="portletHeader">
                    <a href="."
                       tal:attributes="href shop_url">
                        EasyShop Manager
                    </a>            
                </dt>
                <dd class="portletItem">
                    <a href="."
                       tal:attributes="href string:$shop_url/products"
                       i18n:translate="products_label">
                        Products
                    </a>                    
                </dd>                                        
                <dd class="portletItem">
                    <a href="."
                       tal:attributes="href string:$shop_url/categories"
                       i18n:translate="categories_label">
                        Categories
                    </a>                    
                </dd>                                        
                <dd class="portletItem">
                    <a href="."
                       tal:attributes="href string:$shop_url/groups"
                       i18n:translate="groups_label">
                        Groups
                    </a>                    
                </dd> 

                <dd class="portletItem">
                    <hr />
                </dd> 
                
                <dd class="portletItem">
                    <a href="."
                       tal:attributes="href string:$shop_url/customers"
                       i18n:translate="customers_label">
                        Customers
                    </a>                    
                </dd>
                <dd class="portletItem">
                    <a href="."
                       tal:attributes="href string:$shop_url/orders"
                       i18n:translate="orders_label">
                        Orders
                    </a>                    
                </dd>

                <dd class="portletItem">
                    <a href="."
                       tal:attributes="href string:$shop_url/carts"
                       i18n:translate="carts_label">
                        Carts
                    </a>                    
                </dd>                        

                <dd class="portletItem">
                    <hr />
                </dd> 
                
                <dd class="portletItem">
                    <a href="."
                       tal:attributes="href string:$shop_url/taxes"
                       i18n:translate="taxes_label">
                        Taxes
                    </a>                    
                </dd>
                <dd class="portletItem">
                    <hr />
                </dd>                 
                <dd class="portletItem">
                    <a href="."
                       tal:attributes="href string:$shop_url/shippingmethods"
                       i18n:translate="shipping_methods_label">
                        Shipping Methods
                    </a>                    
                </dd>        
                <dd class="portletItem">
                    <a href="."
                       tal:attributes="href string:$shop_url/shippingprices"
                       i18n:translate="shipping_prices_label">
                        Shipping Prices
                    </a>                    
                </dd>        
                <dd class="portletItem">
                    <hr />
                </dd>                 
                <dd class="portletItem">
                    <a href="."
                       tal:attributes="href string:$shop_url/paymentmethods"
                       i18n:translate="payment_methods_label">
                        Payment Methods
                    </a>                    
                </dd>        
                <dd class="portletItem">
                    <a href="."
                       tal:attributes="href string:$shop_url/paymentprices"
                       i18n:translate="payment_prices_label">
                        Payment Prices
                    </a>                    
                </dd>                        
            </dl>

        </div>
    </body>
</html>
