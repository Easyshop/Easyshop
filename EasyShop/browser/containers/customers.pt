<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="EasyShop">
    <body>

        <metal:main fill-slot="main"
                    tal:define="customers view/getCustomers">
                    
            <div tal:replace="structure provider:plone.abovecontenttitle" />
   
            <h1 class="documentFirstHeading"
                 i18n:translate="customers_label">
                 Customers
            </h1>
 
            <a href="#"
               class="link-parent"
               tal:attributes="href context/aq_parent/absolute_url"
               i18n:translate="shop_label">
                Shop
            </a>  
   
            <div tal:condition="not:customers"
                 i18n:translate="no_customers_label">
                There are no customers.
            </div>
                
            <table tal:condition="customers">
                <tr tal:repeat="customer customers">
                    <td tal:content="customer/id">
                        id
                    </td>
                                        
                    <!-- <td tal:content="customer/fullname" />
                    <td tal:content="customer/email" /> -->
                    
                    <td>
                        <a tal:attributes="href string:${customer/url}/base_edit">[Edit]</a>
                    </td>                    
                </tr>
            </table>
            
            <div tal:replace="structure provider:plone.belowcontentbody" />
                
        </metal:main>            
    </body>
</html>