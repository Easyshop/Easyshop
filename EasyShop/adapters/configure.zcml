<configure 
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    xmlns:browser="http://namespaces.zope.org/browser">

    <!-- <adapter factory=".customer.CustomerAuthentication" />     -->
    <!-- <adapter factory=".customer.CustomerRelated" /> -->

    <include package=".generic" />
    
    <!-- =========== -->
    <!-- = generic = -->
    <!-- =========== -->     

    <adapter
        factory=".generic.ImageConversion" />

    <adapter
        for="..interfaces.ICategoryContent"
        factory=".generic.FormatterInfos" />

    <adapter
        for="..interfaces.IShopContent"
        factory=".generic.FormatterInfos" />
        
    <!-- ============= -->
    <!-- = Customer / Address = -->
    <!-- ============= -->
    
    <adapter
        factory=".customer.AddressCompleteness" />

    <adapter
        for="..interfaces.IProductContent"        
        factory=".generic.PhotoManagement" />

    <!-- ============ -->
    <!-- = Category = -->
    <!-- ============ -->    
    <adapter
        for="..interfaces.ICategoryContent"
        factory=".generic.PhotoManagement" />

    <!-- ============ -->
    <!-- = CartItem = -->
    <!-- ============ -->

    <adapter
        factory=".cartitem.CartItemPrices" />

    <!-- ======== -->
    <!-- = Cart = -->
    <!-- ======== -->

    <adapter
        factory=".cart.CartPrices" />

    <!-- ========= -->
    <!-- = Order = -->
    <!-- ========= -->
    <adapter 
        factory=".order.PaymentManagement" />
    
    <adapter
        factory=".order.OrderPriceCalculator" />

    <adapter
        factory=".order.OrderItemManager" />

    <!-- ======== -->
    <!-- = Customer = -->
    <!-- ======== -->
    <adapter
        factory=".customer.CustomerAddressManager" />

    <adapter
        factory=".customer.CustomerPaymentManager" />

    <adapter
        factory=".customer.CustomerCompleteness" />

    <!-- ======== -->
    <!-- = Shop = -->
    <!-- ======== -->
    <adapter
        factory=".shop.CustomerManagement" />

    <adapter
        factory=".shop.CurrencyManagement" />

    <adapter 
        factory=".shop.ProductManagement" />

    <adapter
        factory=".shop.ShopCategoryManagement" />

    <adapter
        factory=".shop.ShopGroupManagement" />
        
    <adapter
        for="..interfaces.IShopContent"
        provides="..interfaces.IOrderManagement"
        factory=".shop.OrderManagement" />

    <!-- ========= -->
    <!-- = Group = -->
    <!-- ========= -->    
    <adapter
        factory=".group.GroupProductManager" />
    
</configure>
