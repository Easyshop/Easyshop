<configure xmlns="http://namespaces.zope.org/zope"
           xmlns:browser="http://namespaces.zope.org/browser">

    <browser:page  
        name="tax-view"
        for="...interfaces.ITax"
        class=".tax.TaxView"
        template="tax.pt"
        permission="cmf.ManagePortal" />

    <browser:page
        for="...interfaces.ITaxesContainer"
        name="taxes-view"
        template="taxes_view.pt"
        class=".taxes_view.TaxesView"
        permission="cmf.ManagePortal" />

</configure>
