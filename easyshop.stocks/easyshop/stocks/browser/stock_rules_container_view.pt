<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="EasyShop">
    <body>

        <metal:main fill-slot="main"
                    tal:define="stock_rules view/getStockRules;">
        
            <div tal:replace="structure provider:plone.abovecontenttitle" />
  
            <h1 class="documentFirstHeading"
                i18n:translate="stock_rules_label">
                Stock Rules
            </h1>

            <a href="#"
               class="link-parent"
               tal:attributes="href context/aq_parent/absolute_url"
               i18n:translate="shop_label">
                Shop
            </a>  

            <div tal:condition="not:stock_rules"
                 i18n:translate="no_stock_rules_label">
                There are no stock rules.
            </div>
                 
            <table tal:condition="stock_rules"
                   class="listing shop-default">
              <tr>
                <th width="40%"
                    i18n:translate="name_label">
                    Name
                </th>
                <th width="20%"
                    i18n:translate="available_label">
                    Available / Time Period
                </th>
                <th width="20%"
                    i18n:translate="amount_of_criteria_label">
                    Amount of Criteria
                </th>                
                <th width="20%"
                    i18n:translate="priority_label">
                    Priority
                </th>
              </tr>

              <tr tal:repeat="stock_rule stock_rules">
                <td class="text">

                    <img src="."
                         tal:attributes="src string:$portal_url/document_icon.gif"
                         alt="Shipping Price Icon"
                         title="Shipping Price"
                         i18n:attributes="title stock_rule_label;" />
                    
                    <a href="."
                       tal:attributes="href stock_rule/url"
                       tal:content="stock_rule/title">
                        Default  
                    </a>
                    
                    <tal:block tal:condition="stock_rule/description">
                        (<span class="discreet"
                               tal:content="stock_rule/description">
                            Description
                        </span>)
                    </tal:block>
                    
                </td>
                <td class="number">
                    <span tal:content="stock_rule/available">
                        True
                    </span> /     
                    <span tal:condition="stock_rule/available"
                          tal:content="stock_rule/time_period">
                        1-2 Days
                    </span>    
                </td>
                <td class="number"
                    tal:content="stock_rule/amount_of_criteria">
                    2
                </td>
                <td>
                    <a href="."
                       tal:attributes="href stock_rule/up_url">
                        <img src="arrowUp.gif"
                             alt="Arror Up"
                             title="Move Up"
                             i18n:attributes="title move_up_label;"
                             tal:attributes="src string:${portal_url}/arrowUp.gif" />
                    </a>     
                    <a href="."
                       tal:attributes="href stock_rule/down_url">
                        <img src="arrowDown.gif"
                             alt="Arror Down"
                             title="Move Down"                     
                             i18n:attributes="title move_down_label;"
                             tal:attributes="src string:${portal_url}/arrowDown.gif" />
                    </a>         
                </td>
              </tr>
            </table>          

        </metal:main>    
        
  </body>
</html>