<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="EasyShop">
<body>
    <div metal:fill-slot="main"
         tal:define="orders view/getOrders">

        <h1 class="documentFirstHeading"
            i18n:translate="my_orders_label">
            My Orders
        </h1>

        <a href="#"
           class="link-parent"
           tal:attributes="href string:${context/absolute_url}/my-account"
           i18n:translate="my_account_label">
            My Account
        </a>

        <span tal:condition="not: orders"
              i18n:translate="no_orders_label">
            There are no orders.
        </span>    

        <tal:block tal:repeat="order orders">

            <h2>
                <a href="#"
                   tal:content="order/id"
                   tal:attributes="href order/url">
                    The Title
                </a>
            </h2>
                  
            <table class="order_header">
                <tr>
                    <td>
                        <tal:block i18n:translate="reveived_at_label">
                            Received at</tal:block>:
                    </td>
                    <td tal:content="order/creation_date">
                        2007/07/07    
                    </td>
                </tr>
                <tr>
                    <td><tal:block i18n:translate="state_label">
                        State</tal:block>:
                    </td>
                    <td tal:content="order/state">
                        Send
                    </td>
                </tr>
            </table>    
            <table class="listing" 
                   border="1" 
                   width="100%">
                <tr>               
                    <th i18n:translate="product_label">
                        Product
                    </th>        
                    <th i18n:translate="quantity_label">
                        Quantity
                    </th>        
                    <th i18n:translate="product_price_label">
                        Product Price
                    </th>        
                    <th i18n:translate="price_label">
                        Price
                    </th>
                    <th i18n:translate="tax_rate_label">
                        Tax Rate
                    </th>
                    <th i18n:translate="tax_absolute_label">
                        Tax Absolute
                    </th>                
                    <th i18n:translate="total_label">
                        Total
                    </th>                         
                </tr>

                <tr tal:repeat="item order/items_">

                    <td class="text"
                        tal:content="item/product_title" />

                    <td class="number"
                        tal:content="item/product_quantity" /> 

                    <td class="number"
                        tal:content="item/product_price_net" />                               

                    <td class="number"
                        tal:content="item/price_net" />        

                    <td class="number"
                        tal:content="item/tax_rate" />        

                    <td class="number"
                        tal:content="item/tax" />        

                    <td class="number"
                        tal:content="item/price_gross" />
                </tr>

                <tr tal:condition="order/payment/display">
                                        
                    <td class="text"
                        i18n:translate=""
                        tal:content="order/payment/title">
                        Cash On Delivery
                    </td>
                    <td class="number">
                        1.0
                    </td>
                    <td class="number"
                        tal:content="order/payment/price_net" />            

                    <td class="number"
                        tal:content="order/payment/price_net" />            

                    <td class="number"
                        tal:content="order/payment/tax_rate" />            

                    <td class="number"
                        tal:content="order/payment/tax" />            

                    <td class="number"
                        tal:content="order/payment/price_gross" />                    
                </tr>                                                                                 

                <tr>
                    <td class="text"
                        i18n:translate="shipping_label">
                        Shipping
                    </td>
                    <td class="number">
                        1.0
                    </td>
                    <td class="number"
                        tal:content="order/shipping/price_net" />            

                    <td class="number"
                        tal:content="order/shipping/price_net" />            

                    <td class="number"
                        tal:content="order/shipping/tax_rate" />            

                    <td class="number"
                        tal:content="order/shipping/tax" />            

                    <td class="number"
                        tal:content="order/shipping/price_gross" />                    
                </tr>                                                                                 
                <tr>
                    <td colspan="6"></td>
                    <td class="number"
                        tal:content="order/price_gross" />            
                </tr>

            </table>
        </tal:block>              
    </div>
</body>
</html>