<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="EasyShop">
      
    <body>
        <div metal:fill-slot="main"
             tal:define="properties view/getProperties">
            <form id="manage-variants"
                  method="post"
                  action="."
                  tal:attributes="action context/REQUEST/URL">
                  
                <input type="submit"
                       value="Add Property" 
                       name="addProperty:method" />
                       
                <table class="listing">
                    <tr>
                        <th></th>
                        <th i18n:translate="article_id_label">
                            Article ID
                        </th>    
                        <th i18n:translate="title_label">
                            Title
                        </th>
                        <th tal:repeat="property properties"
                            tal:content="property/title">
                            Title
                        </th>
                        <th i18n:translate="price_label">
                            Price
                        </th>
                    </tr>
                    <tr tal:repeat="variant view/getVariants">
                        <td>
                            <input type="checkbox" 
                                   name="id"
                                   tal:attributes="value variant/id" />
                        </td>    
                        <td tal:content="variant/article_id">
                            Article ID
                        </td>                    
                        <td>
                            <a href="."
                               tal:attributes="href string:${variant/url}/edit"
                               tal:content="variant/title">
                               Variant Title
                            </a>  
                        </td>
                        <td tal:repeat="property variant/properties">
                            <span tal:content="property/option">
                                Option Value
                            </span>    
                        </td>
                        <td tal:content="variant/price">
                            42.0
                        </td>
                    </tr>
                    <tr>
                        <td></td>                                                                        
                        <td>
                           <input type="text"
                                  name="title" />
                        </td>
                        <td>
                           <input type="text"
                                  name="article_id" />
                        </td>

                        <tal:block tal:repeat="property properties">
                            <td>
                                <select tal:attributes="name property/id">
                                    <option value="all"
                                            i18n:attributes="value all_label;">
                                        All
                                    </option>
                                    <option tal:repeat="option property/options"
                                            tal:attributes="value option/id"
                                            tal:content="option/name">
                                        Option Name                                        
                                    </option>    
                                </select>
                            </td>    
                        </tal:block>                    
                        <td></td>
                    </tr>           
                    <tr>
                        <td></td>
                        <td>
                            <input type="submit"
                                   value="add" 
                                   name="addVariants:method" />

                            <input type="submit"
                                   value="delete" 
                                   name="deleteVariants:method" />
                                   
                        </td>
                        <td></td>
                        <td></td>
                        <td tal:repeat="property properties">
                        </td>    
                    </tr>     
                </table>
            </form>    
        </div>    
    </body>
    
</html>


