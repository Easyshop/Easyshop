<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="EasyShop">
     
    <metal:block metal:fill-slot="javascript_head_slot">

        <script>
             (function($) { 

                $(function(){
                    $("img.thumbnail").click(function () {
                        var thumbnail_path = $(this).attr("src");
                        var large_path = $("#image-large").attr("src");
                        thumbnail_path = thumbnail_path.replace("tile", "preview");
                        if (thumbnail_path != large_path) {
                            $("#image-large").fadeTo(350, 0, function() {
                                $("#image-large").attr({ src: thumbnail_path })
                                $("#image-large").fadeTo(350, 1);
                            });                            
                        }
                    });
                })          
                    
             })(jQuery);
        
        </script>
        
    </metal:block>
      
    <body>        
        <div metal:fill-slot="main">            
            <div tal:replace="structure provider:easyshop.product-manager" />
        </div>    
    </body>
    
</html>
