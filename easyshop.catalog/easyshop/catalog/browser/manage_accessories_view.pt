<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="EasyShop">
      
    <body>
        <metal:javascript_head fill-slot="javascript_head_slot">
            <script>
                jq(function() {
                    jq("#select-all-products").click(function () {
                        var checkedValue = jq('#select-all-products').attr('checked') ? 'checked' : ''; 
                        jq(".new-products").each(function(){
                            this.checked = checkedValue;
                        });                    
                    });

                    jq("#select-all-accessories").click(function () {
                        var checkedValue = jq('#select-all-accessories').attr('checked') ? 'checked' : ''; 
                        jq(".accessories").each(function(){
                            this.checked = checkedValue;
                        });                    
                    });
                });
            </script>               
        </metal:javascript_head>
        
        <div metal:fill-slot="main">
             
            <h1 class="documentFirstHeading"
                i18n:translate="manage_accessories_label">
                Manage Accessories
            </h1>    
            
            <form method="post">
                <input type="text" 
                       name="product-title" />

                <input type="submit"
                       value="Search products"
                       i18n:attributes="value search_products_label;"/>
                
            </form>
            
            <tal:block tal:define="products view/getProducts"
                       tal:condition="products">
                <h1>Suchergebnis</h1>
                <form action="add-accessories"
                      method="post">
                    <table>
                        <tr>
                            <td>
                                <input id="select-all-products"
                                       type="checkbox" />
                            </td>
                        </tr>
                        <tr tal:repeat="product products">
                            <td>
                               <input type="checkbox"
                                      class="new-products"
                                      name="new-products"
                                      tal:attributes="value product/uid" /> 
                            </td>
                            <td>
                                <input type="text"
                                       size="3"
                                       value="1"
                                       tal:attributes="name string:${product/uid}_quantity" />
                            </td>
                    
                            <td tal:content="product/title">
                                title
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td colspan="2">
                                <input type="submit"
                                       value="Add products"
                                       i18n:attributes="value add_products_label;"/>                                
                            </td>
                        </tr>
                    </table>
                </form>
            </tal:block>
            
            <tal:block tal:define="accessories view/getAccessories"
                       tal:condition="accessories">
                <h1>Zubeh√∂r</h1>
                <form action="update-accessories"
                      method="post">
                    <table>
                        <tr>
                            <td>
                                <input id="select-all-accessories"
                                       type="checkbox"
                                       checked="checked" />
                            </td>
                        </tr>
                        <tr tal:repeat="accessory accessories">
                            <td>
                               <input type="checkbox"
                                      name="accessories"
                                      class="accessories"
                                      checked="checked"
                                      tal:attributes="value accessory/uid" /> 
                            </td>
                            <td>
                                <input type="text"
                                       size="3"                                       
                                       tal:attributes="name string:${accessory/uid}_quantity;
                                                       value accessory/quantity" />
                            </td>
                    
                            <td tal:content="accessory/title">
                                title
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td colspan="2">
                                <input type="submit" 
                                       value="Update accessories"
                                       i18n:translate="value update_accessories_label;"/>                                
                            </td>
                        </tr>
                    </table>
                </form>    
            </tal:block>
        </div>    
    </body>
    
</html>


