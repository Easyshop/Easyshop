<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="EasyShop">
    <body>

        <metal:main fill-slot="main"
                tal:define="groups view/getGroups">

            <div tal:replace="structure provider:plone.abovecontenttitle" />
  
            <h1 class="documentFirstHeading"
                i18n:translate="groups_label">
                Groups
            </h1>

            <a href="#"
               class="link-parent"
               tal:attributes="href context/aq_parent/absolute_url"
               i18n:translate="shop_label">
                Shop
            </a>  
    
            <p class="documentDescription"
               tal:content="context/Description">
                Description
            </p>
    
            <div tal:replace="structure provider:plone.abovecontentbody" />

            <div tal:condition="not:groups"
                 i18n:translate="no_groups_label">
                There are no groups.
            </div>    
        
            <table tal:condition="groups"
                   width="100%"
                   id="sortable"
                   class="listing">
                <tr>
                    <th i18n:translate="name_label">
                        Name
                    </th>
                    <th i18n:translate="description_label">
                        Description
                    </th>
                    <th i18n:translate="edit_label">
                        Edit
                    </th>                               
                </tr>  
                <tr tal:repeat="group groups">
                    <td>
                                        
                        <img src="."
                             tal:attributes="src string:$portal_url/group_icon.png"
                             alt="Group Icon"
                             title="Group"
                             i18n:attributes="title group_label;" />
                    
                        <a tal:content="group/Title"
                           tal:attributes="href string:${group/absolute_url}/edit">
                            Group Title
                        </a>
                    </td>
                    <td class="es_category_description"
                     tal:content="group/getDescription">                     
                     Group Description
                    </td>
                    <td>
                        <a tal:attributes="href string:${group/absolute_url}/edit"
                           i18n:translate="edit_label">
                           Edit
                        </a>            
                    </td>                      
                </tr>
            </table>        

            <div tal:replace="structure provider:plone.belowcontentbody" />
            
        </metal:main>
    
    </body>
</html>