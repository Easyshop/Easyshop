<dl class="portlet" 
    id="portlet-easyshop-administration"
    tal:define="shop_url view/getShopURL"
   i18n:domain="EasyShop">

    <dt class="portletHeader">
        <a href="."
           tal:attributes="href shop_url">
            EasyShop Manager
        </a>            
    </dt>
    <dd class="portletItem">
        <a href="."
           tal:attributes="href string:$shop_url/categories"
           i18n:translate="categories_label">
            Categories
        </a>                    
    </dd>                                        
    <dd class="portletItem">
        <a href="."
           tal:attributes="href string:$shop_url/products"
           i18n:translate="products_label">
            Products
        </a>                    
    </dd>

    <dd class="portletItem even">
        <a href="."
           tal:attributes="href string:$shop_url/orders"
           i18n:translate="orders_label">
            Orders
        </a>                    
    </dd>

    <dd class="portletItem">
        <a href="."
           tal:attributes="href string:$shop_url/discounts"
           i18n:translate="discounts_label">
            Discounts
        </a>                    
    </dd>                        
    <dd class="portletItem even">
        <a href="."
           tal:attributes="href string:$shop_url/stock-information"
           i18n:translate="stock_information_label">
            Stock Information
        </a>                    
    </dd>                        
</dl>
