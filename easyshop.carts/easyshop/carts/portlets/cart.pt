<div metal:define-macro="portlet"
     i18n:domain="EasyShop">

    <dl id="portlet-cart"
        class="portlet"   
         i18n:domain="EasyShop">
            <dt class="portletHeader">
                <a tal:attributes="href string:${view/getShopUrl}/cart"
                   i18n:translate="cart_label">
                    Cart
                 </a>
            </dt>

            <dd class="portletItem">
                <div align="center">
                    <span class="amount"
                          tal:content="view/getAmountOfArticles">
                        3
                    </span>
                    <span i18n:translate="article_label">
                        Article
                    </span>    
                </div>
                <div class="price" 
                     align="center"
                     tal:content="view/getCartPrice">
                    42.0
                </div>
                
            </dd>

            <dd class="portletItem">
             <div class="product-price-info" style="line-height:10px">
                 *Preis inkl. MwSt. und <a href="javascript:return false" style="text-decoration:underline" tal:attributes="onclick string:easyShopZoomWindow('${view/getShopURL}/information-page-popup?page_id=terms-and-conditions#para4', '800', '800')">Versandkosten</a> deutschlandweit
             </div> 
            </dd>

        
            <dd class="portletFooter">
                <a tal:attributes="href string:${view/getShopUrl}/checkout">
                    <tal:block i18n:translate="checkout_label">
                        Check Out
                    </tal:block>
                </a>
            </dd>
    </dl>

</div>