<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/simple_main_template/macros/master"
      i18n:domain="rating">
    <body>

        <metal:main fill-slot="main"
                    tal:define="data view/getData">
                
            <h1 class="documentFirstHeading">
                Ihre Bewertung
            </h1>

            <form action=".">

                <div tal:content="data/score">
                    Excellent
                </div>    
        
                <div tal:content="data/name">
                    John Doe
                </div>    

                <div tal:content="data/subject">
                    Subject
                </div>    

                <div tal:content="structure data/converted_comment">
                    Comment
                </div>
            
                <input type="hidden"
                       name="score"
                       tal:attributes="value data/score" />

                <input type="hidden"
                       name="name"
                       tal:attributes="value data/name" />

                <input type="hidden"
                       name="subject"
                       tal:attributes="value data/subject" />

                <input type="hidden"
                       name="comment"
                       tal:attributes="value data/comment" />
                   
                <input type="submit"
                       class="standalone"
                       name="add-rating:method"
                       value="Save" 
                       i18n:attributes="value save_label;" />

                <input type="button"
                       class="context"
                       value="Re-edit"
                       onclick="javascript:history.go(-1)"
                       i18n:attributes="value re_edit_label;" />

            </form>
        </metal:main>
    </body>
</html>