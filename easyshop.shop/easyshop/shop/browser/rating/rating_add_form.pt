<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/simple_main_template/macros/master"
      i18n:domain="rating">
    <body>

        <metal:main fill-slot="main">
            
            <img style="padding-bottom:10px"
                 src="."
                 tal:attributes="src string:${context/absolute_url}/image_thumb" />
            
            <form action="." 
                  metal:define-macro="master"
                  tal:attributes="action request/URL" method="post"
                  class="edit-form" enctype="multipart/form-data"
                  id="zc.page.browser_form">
          
                <dl class="portalMessage error"
                    tal:define="status view/status"
                    tal:condition="status">
                    <dd tal:content="status" />
                </dl>

                <h3 class="documentFirstHeading"
                     i18n:translate="">
                     Ihre Bewertung f√ºr
                     <tal:block tal:content="context/Title">Title</tal:block>
                </h3>

                <p tal:content="view/description|nothing">
                    Description
                </p>

                <table>
                    <tal:block tal:repeat="widget view/widgets">
                    <tr tal:define="description widget/hint;
                                    error widget/error"> 
                        <td class="field"
                             tal:attributes="class python:'field'+(error and ' error' or '')">
                        
                            <label tal:attributes="for widget/name">
                                <span i18n:translate=""
                                      tal:content="widget/label">
                                    label
                                </span>
                            </label>
  
                            <span class="fieldRequired" 
                                  title="Required" 
                                  tal:condition="widget/required">
                                (Required)
                            </span>
                        </td>
                        <td>
                            <div tal:condition="error"
                                 tal:content="error">
                                The Error
                            </div>
                            <div class="widget" 
                                 tal:content="structure widget">
                                 Widget goes here
                            </div>
                        </td>
                    </tr>
                    </tal:block>               
                </table>
                
                <input type="hidden"
                       name="user_id"
                       tal:attributes="value context/REQUEST/user_id|nothing" />
                       
                <div id="actionsView">
                    <span class="actionButtons"
                          tal:condition="view/availableActions"
                          metal:define-slot="bottom_buttons">
                        <input tal:repeat="action view/actions"
                               tal:replace="structure action/render" />
                    </span>
                </div>
            </form>
        </metal:main>    
    </body>
</html>
