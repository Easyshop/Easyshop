<configure 
    xmlns="http://namespaces.zope.org/zope">

    <include
        package=".generic" />

    <include
        package=".shop" />
    
    <adapter
        factory=".generic.ImageConversion" />

    <adapter
        for="easyshop.core.interfaces.ICategory"
        factory=".generic.FormatterInfos" />

    <adapter
        for="easyshop.core.interfaces.IShop"
        factory=".generic.FormatterInfos" />
        
