<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="EasyShop">

<div metal:define-macro="direct-debit">
  <div tal:content="payment_method/bank_name">Bank</div>
  <div tal:content="payment_method/bank_identification_code">Bank</div>      
  <div tal:content="payment_method/account_number">Account-Number</div>  
  <div tal:content="payment_method/depositor">Depositor</div>
</div> 

<div metal:define-macro="paypal">
  <div i18n:translate="paypal_label">
      PayPal
  </div>
</div> 

<div metal:define-macro="simple-payment">
  <div i18n:translate=""
       tal:content="payment_method/Title">
  </div>
  <div i18n:translate=""
       tal:content="payment_method/Description">
  </div>
</div> 

</html>