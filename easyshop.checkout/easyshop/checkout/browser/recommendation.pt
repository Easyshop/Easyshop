<html i18n:domain="EasyShop">
    <body tal:define="mail_info view/getMailInfo">

        <p i18n:translate="recommendation_header">
            Hello <span i18n:name="email"><span tal:replace="request/email">john@doe.com</span></span>,
        </p>

        <p i18n:translate="recommendation_body">
            <span i18n:name="customer_name"><span tal:replace="mail_info/name" /></span>
            (<span i18n:name="customer_email"><span tal:replace="mail_info/email" /></span>)
            recommends our shop to you
        </p>

        <p i18n:translate="recommendation_footer">
            if you like come and visit us at
            <span i18n:name="shop_url">
                <a tal:attributes="href mail_info/shop_url"
                   tal:content="mail_info/shop_url">http://shop.com/</a>
            </span>
        </p>

        <p style="font-weight:bold"
           tal:content="mail_info/shop_title">
            EasyShop
        </p>

  </body>
</html>